<resources>

    <!-- Base application theme. -->
    <style name="AppThemeMain" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MainPriceStyle" parent="@style/TextAppearance.AppCompat.Display3">
        <item name="android:textSize">70sp</item>
        <item name="android:textColor">@color/trans_ee_white</item>
    </style>

    <declare-styleable name="ThinPieChart">
        <attr name="title" format="string" />
    </declare-styleable>

    <declare-styleable name="PressureChart">
        <attr name="startColor" format="color" />
        <attr name="middleColor" format="color" />
        <attr name="endColor" format="color" />
        <attr name="pressure" format="float" />
        <attr name="aspect" format="float" />
        <attr name="segments" format="integer" />
    </declare-styleable>

</resources>
